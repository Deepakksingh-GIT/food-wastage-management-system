#1 Food Wastage Trends by Category
query = """
    SELECT Food_Type, SUM(Quantity) AS Total_Wasted
    FROM Food_Listings
    WHERE Expiry_Date < CURDATE()
    GROUP BY Food_Type
    ORDER BY Total_Wasted DESC;
"""

cursor.execute(query)
result = cursor.fetchall()
print(result)

